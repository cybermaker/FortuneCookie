<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Fortune Cookie"
        android:id="@+id/titlecookie"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
        android:textColor="#0a0a0a" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/cookiesimage"
        android:layout_alignStart="@+id/titlecookie"
        android:layout_below="@+id/newcookie" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Results"
        android:id="@+id/result"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_below="@+id/cookiesimage"
        android:layout_alignStart="@+id/cookiesimage" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="Date:"
        android:id="@+id/Date"
        android:textSize="20dp"
        android:textColor="#100f0f"
        android:layout_below="@+id/Resultoutput"
        android:layout_alignEnd="@+id/Resultoutput" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="    Result:"
        android:id="@+id/Resultoutput"
        android:layout_below="@+id/result"
        android:layout_alignStart="@+id/result"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="New Cookie"
        android:id="@+id/newcookie"
        android:layout_below="@+id/titlecookie"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#171515"
        android:textSize="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:text="Shake"
        android:id="@+id/Shakebtn"
        android:layout_below="@+id/Date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:textSize="20dp" />
</RelativeLayout>

